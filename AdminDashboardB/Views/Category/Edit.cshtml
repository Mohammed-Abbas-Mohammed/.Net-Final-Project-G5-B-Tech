@* @model DTOsB.CategoryDTOs.UpdateCategoryDTO *@
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <h1 class="text-center mb-4 fw-bold text-primary">Edit Category</h1>
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
                @*
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagePath" value="@Model.ImagePath" />
                *@

                <!-- Category Image -->
                <div class="mb-3">
                    <label class="form-label fs-5 fw-bold" for="ImageFile">Category Image</label>
                    <input type="file" class="form-control" id="ImageFile" name="ImageFile">
                    @*
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    *@
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <p>Current Image: @Model.ImagePath</p>
                    }
                </div>

                <!-- Arabic Name -->
                <div class="mb-3">
                    <label class="form-label fs-5 fw-bold" for="ArabicName">Arabic Name</label>
                    <input type="text" class="form-control" id="ArabicName" name="ArabicName" placeholder="Enter Arabic Name" value="@Model.ArabicName" required>
                    @*
                    <span asp-validation-for="ArabicName" class="text-danger"></span>
                    *@
                </div>

                <!-- English Name -->
                <div class="mb-3">
                    <label class="form-label fs-5 fw-bold" for="Name">English Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter English Name" value="@Model.Name" required>
                    @*
                    <span asp-validation-for="Name" class="text-danger"></span>
                    *@
                </div>

                <!-- Update Button -->
                <div class="d-grid gap-2 mt-4">
                    <button class="btn btn-success btn-lg" type="submit">
                        <i class="fa-solid fa-check"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

