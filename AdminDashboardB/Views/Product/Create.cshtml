    <div class="row justify-content-center mt-5">
        <h2 class="text-center mb-4 bg-light fw-bold text-primary p-4 shadow rounded" style="margin-top: -100px">Create Product</h2>
        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold " for="Name">English Name</label>
                <input type="text" class="form-control shadow-sm" id="EnName" name="Translations[0].Name" placeholder="Enter Name" required>
                <input type="hidden" name="Translations[0].LanguageId" value="2" />
                <span asp-validation-for="Translations[0].Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="EnBrandName">English Brand Name</label>
                <input type="text" class="form-control shadow-sm" id="EnBrandName" name="Translations[0].BrandName" placeholder="Enter English Brand Name" required>
                <span asp-validation-for="Translations[0].BrandName" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="EnDescription">English Description</label>
                <textarea class="form-control shadow-sm" id="EnDescription" name="Translations[0].Description" rows="3" placeholder="Enter English Description"></textarea>
                <span asp-validation-for="Translations[0].Description" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="ArName">Arabic Name</label>
                <input type="text" class="form-control shadow-sm" id="ArName" name="Translations[1].Name" placeholder="Enter Arabic Name" required>
                <input type="hidden" name="Translations[1].LanguageId" value="1" />
                <span asp-validation-for="Translations[1].Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="ArBrandName">Arabic Brand Name</label>
                <input type="text" class="form-control shadow-sm" id="ArBrandName" name="Translations[1].BrandName" placeholder="Enter Arabic Brand Name" required>
                <span asp-validation-for="Translations[1].BrandName" class="text-danger"></span>
            </div>
            
            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="ArDescription">Arabic Description</label>
                <textarea class="form-control shadow-sm" id="ArDescription" name="Translations[1].Description" rows="3" placeholder="Enter Arabic Description"></textarea>
                <span asp-validation-for="Translations[1].Description" class="text-danger"></span>
            </div>


            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="Price">Price</label>
                <input type="number" class="form-control shadow-sm" id="Price" name="Price" placeholder="Enter Price" required>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="Stock"> StockQuantity </label>
                <input type="number" class="form-control shadow-sm" id="Stock" name="StockQuantity" placeholder="Enter StockQuantity " required>
                <span asp-validation-for="StockQuantity" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold " for="Description">English Description</label>
                <textarea class="form-control shadow-sm" id="Description" name="EnDescription" rows="3" placeholder="Enter Product Description"></textarea>
                <span asp-validation-for="Translations.FirstOrDefault(trans=> trans.LanguageId == 2).Description" class="text-danger"></span>
            </div>

            <!-- Category Region -->
            @if (categories != null && categories.Any())
            {
            <div class="mb-4">
                    <label class="form-label fs-5 fw-bold">Select Main Category</label>
                    <select class="form-select" name="SelectedCategories[0].Id" id="mainCategoryDropdown">
                        <option value="">-- Select Main Category --</option>
                        @foreach (var category in categories)
                        {
                            var mainCategoryTranslation = category?.Translations?.FirstOrDefault()?.CategoryName ?? "No name available";
                            <option value="@category.Id">@mainCategoryTranslation</option>
                        }
                    </select>
            </div>

                <div class="mb-4">
                    <label class="form-label fs-5 fw-bold">Select Subcategory</label>
                    <select class="form-select" name="SelectedCategories[1].Id" id="subCategoryDropdown">
                        <option value="">-- Select Subcategory --</option>
                        @foreach (var category in categories)
                    {
                            var subCategoryTranslation = category?.Translations?.FirstOrDefault()?.CategoryName ?? "No name available";
                            <option value="@category.Id">@subCategoryTranslation</option>
                    }
                   
                </select>
                </div>
            }
            else
            {
                <p>No categories available.</p>
            }
            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="ImageFiles">Product Images</label>
                <input type="file" class="form-control shadow-sm" id="ImageFiles" name="ImageFiles" multiple>
                <span asp-validation-for="Images.FirstOrDefault().ImageFile" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fs-5 fw-bold" for="SpecificationId">Specification</label>
                <select class="form-select shadow-sm" id="SpecificationId" name="SpecificationId">
                    <option value="">Select Specification</option>
                    @*
                    @foreach (var Specification in ViewBag.SpecificationList)
                    {
                    <option value="@Specification.Id">@Specification.Name</option>
                    }
                    *@
                </select>
                @* <span asp-validation-for="SpecificationId" class="text-danger"></span> *@
            </div>

            <!-- Specifications Region -->
          
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#specModal">
                Add Specifications
            </button>
            <div class="modal fade" id="specModal" tabindex="-1" aria-labelledby="specModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="specModalLabel">Add Specifications</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="specForm" method="post">
                                <div class="table-responsive shadow rounded-3">
                                    <!-- Table structure for specifications -->
                                    <table class="table table-hover text-center align-middle">
                                        <thead class="text-center fw-bold shadow">
                                            <tr>
                                                <th>English Key</th>
                                                <th>English Value</th>
                                                <th>Arabic Key</th>
                                                <th>Arabic Value</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody id="specificationsContainer">
                                            <tr class="specification-entry">
                                                <td>
                                                    <input type="text" class="form-control" style="width: 100%;" name="Specifications[0].Translations[0].TranslatedKey" placeholder="Enter English Key" required>
                                                    <input type="hidden" name="Specifications[0].Translations[0].LanguageId" value="2" />
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" style="width: 100%;" name="Specifications[0].Translations[0].TranslatedValue" placeholder="Enter English Value" required>
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" style="width: 100%;" name="Specifications[0].Translations[1].TranslatedKey" placeholder="Enter Arabic Key" required>
                                                    <input type="hidden" name="Specifications[0].Translations[1].LanguageId" value="1" />
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" style="width: 100%;" name="Specifications[0].Translations[1].TranslatedValue" placeholder="Enter Arabic Value" required>
                                                </td>
                                                <td>
                                                    <button type="button" class="btn btn-danger btn-sm delete-spec">Delete</button>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- Button to add more specification entries -->
                                <button type="button" class="btn btn-secondary mt-3" id="addSpec">Add More</button>
                            </form>
                    </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success">Save Product</button>
                    </div>

                    <div class="form-group">
                        <label for="spec-value-@i">Specification Value</label>
                        <input type="text" class="form-control" name="Specifications[@i].Translations[0].TranslatedValue" 
                               value="@Model.Specifications[i].Translations.FirstOrDefault()?.TranslatedValue ?? string.Empty" />
                    </div>
                </div>
            }
            </div>


           

             <!-- Button to add new specification -->
            <button type="button" class="btn btn-primary" id="add-spec-btn">Add Specification</button> *@


            @*  <div class="d-grid gap-2 mt-5">
                <button class="btn btn-success btn-lg shadow" type="submit">
            Submit
                </button>
            </div> *@
        </form>
    </div>
</div>
<script>
    document.getElementById('addSpec').addEventListener('click', function () {
        const specCount = document.querySelectorAll('.specification-entry').length;

        const specRow = document.createElement('tr');
        specRow.classList.add('specification-entry');
        specRow.innerHTML = `
                    <td><input type="text" class="form-control" style="width: 100%;" name="Specifications[${specCount}].Translations[0].TranslatedKey" placeholder="Enter English Key" required></td>
                    <input type="hidden" name="Specifications[${specCount}].Translations[0].LanguageId" value="2" />
                    <td><input type="text" class="form-control" style="width: 100%;" name="Specifications[${specCount}].Translations[0].TranslatedValue" placeholder="Enter English Value" required></td>
                    <td><input type="text" class="form-control" style="width: 100%;" name="Specifications[${specCount}].Translations[1].TranslatedKey" placeholder="Enter Arabic Key" required></td>
                    <input type="hidden" name="Specifications[${specCount}].Translations[1].LanguageId" value="1" />
                    <td><input type="text" class="form-control" style="width: 100%;" name="Specifications[${specCount}].Translations[1].TranslatedValue" placeholder="Enter Arabic Value" required></td>
                    <td><button type="button" class="btn btn-danger btn-sm delete-spec">Delete</button></td>
                `;

        document.getElementById('specificationsContainer').appendChild(specRow);
    });
</script> *@
